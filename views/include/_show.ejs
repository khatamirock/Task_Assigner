<% for(var i = 0; i < users.length; i++) { %>
    <div class="div">

    
    
        <tr class="tableRow" onclick="kirevai('<%= users[i]._id %>')">
            
            <td><%= i + 1 %></td>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].gender %></td>
            <td><%= users[i].status %></td>
            <td>
                <a href="/update-user?id=<%= users[i]._id%>" class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                </a>
                <a href="/delete_user/?id=<%= users[i]._id%>" class="btn border-shadow delete" data-id=<%= users[i]._id%> >
                    <span class="text-gradient"><i class="fas fa-times"></i></span>
                </a>
            </td>
        </tr>
    </a>
</div>
<% } %>


 
<script>
    function kirevai(userId) {
        // Construct the URL with the userId parameter
        var url = '/post_of_user?id=' + encodeURIComponent(userId);
        window.location.href = url;
    }
</script>


    




 


